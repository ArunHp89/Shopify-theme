<section class="cst_cst-coll_category">
    <div class="cst-coll-heading heading-content">
        <div class="container">
            <div class="row">
                <div class="cst-coll-wrapper">
                    <h1 class="cst-coll-tit"><span>{{ collection.title }}</span></h1>

                    <div class="breadcrumb-group">
                        <div class="breadcrumb clearfix" itemtype="http://schema.org/BreadcrumbList">
                            <span>
                                <a href="/"><span itemprop="name">home</span></a>
                            </span>

                            <span class="arrow-space">/</span>
                            <span>
                                <a href="/collections/{{ collection.handle }}">
                                    <span itemprop="name">{{ collection.title }}</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  {% if collection.metafields.custom.sub_collections %}
    <div class="cst-coll_categories_toolbar">
        <div class="related-categories-img">
            <div class="current-category" id="current-category">
               <ul class="related-categories--parent active" id="related-categories--parent">
                  {% assign CollectionInfos = collection.metafields.custom.sub_collections.value %}
                    {% for CollectionInfo in CollectionInfos %}
                      <li>
                        <a href="/collections/{{ CollectionInfo.handle }}" class="height-adjustable-desks">
                          <div class="cst-category-img" style="background-image: url({{ CollectionInfo.image | img_url: 'master' }})"></div>
                              <span>{{ CollectionInfo.title }}
                                  <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 9">
                                      <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor"></path>
                                  </svg>
                              </span>
                          </a>
                      </li>
                    {% endfor %}
                 </ul>
            </div>
        </div>
    </div>
  {% endif %}
</section>



<style>
    section.cst_cst-coll_category {
        margin: 0 auto;
        padding: 0 25px;
        width: 86.5% !important;
        max-width: 1920px !important;
    }
    section.cst_cst-coll_category .container {
        width: 100%;
    }
    section.cst_cst-coll_category .cst-coll-wrapper {
        display: flex;
        width: 100%;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        border-left-width: 0;
        border-right-width: 0;
        padding: 6px 0 0;
    }

    section.cst_cst-coll_category h1.cst-coll-tit {
        margin: 0;
        font-weight: 700;
        font-size: 28px;
        padding: 0;
    }

    section.cst_cst-coll_category .breadcrumb-group {
        text-transform: capitalize;
    }

    section.cst_cst-coll_category .breadcrumb.clearfix {
        font-size: 12px;
        font-weight: 300;
        padding-right: 15px;
    }

    section.cst_cst-coll_category .breadcrumb.clearfix span a {
        color: #969696;
        text-shadow: none;
        text-decoration: none;
        font-size: 12px;
        text-decoration: unset;
    }

    section.cst_cst-coll_category section.cst_cst-coll_category .container {
        max-width: 100% !important;
        width: 100%;
    }
    section.cst_cst-coll_category div#current-category {
        display: flex;
        overflow: auto;
        padding: 0%;
        scroll-behavior: smooth;
    }
  section.cst_cst-coll_category div#current-category::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 0 rgb(0 0 0 / 30%);
    background-color: #fff;
}
  section.cst_cst-coll_category div#current-category::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: #ebebeb;
}
  section.cst_cst-coll_category div#current-category::-webkit-scrollbar {
    display: none;
}
  section.cst_cst-coll_category div#current-category::-webkit-scrollbar {
    height: 5px;
    background-color: #f5f5f5;
}
  section.cst_cst-coll_category div#current-category::-webkit-scrollbar {
    display: flex;
}

    section.cst_cst-coll_category ul#related-categories--parent {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-flow: row wrap;
        padding-left: 0px;
        margin: 0;
        flex: none;
    }

    section.cst_cst-coll_category ul#related-categories--parent li {
        list-style: none;
        padding: 5px;
    }

    section.cst_cst-coll_category ul#related-categories--parent li a {
        display: flex;
        flex-direction: row;
        align-items: center;
        background: #f2f2f2;
        padding: 10px;
        border-radius: 10px;
        width: 185px;
        color: #243349;
        font-weight: 400;
        text-decoration: none;
    }

    section.cst_cst-coll_category .cst-category-img {
        width: 90px;
        height: 90px;
        background: center;
        background-size: contain;
        background-repeat: no-repeat;
        max-width: 50%;
        display: block !important;
    }

    section.cst_cst-coll_category ul#related-categories--parent li a span {
        max-width: 53%;
        font-size: 14px;
        line-height: 1.3em;
        font-weight: 800;
        margin-left: 5px;
        text-align: left;
        padding: 0;
        height: 70px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    section.cst_cst-coll_category ul#related-categories--parent li a span svg {
        width: 11px;
        height: 9px;
        margin-left: 0;
        transform: rotate(-90deg);
    }
  @media (max-width:767px){
    section.cst_cst-coll_category .cst-category-img{
        width: 80px;
        height: 80px;
        background-size: contain;
        background-repeat: no-repeat;
    }
    section.cst_cst-coll_category ul#related-categories--parent li a {
        flex-direction: column;
        width: 100px;
        height: 120px;
        padding: 5px 4px;
}
    section.cst_cst-coll_category ul#related-categories--parent li a span {
    max-width: 100%;
}
    section.cst_cst-coll_category .cst-coll-wrapper {
    flex-direction: column-reverse;
}
    section.cst_cst-coll_category h1.cst-coll-tit, section.cst_cst-coll_category .breadcrumb-group {
    width: 100%;
}
  }
</style>
