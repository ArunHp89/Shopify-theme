}

 .footer  .footer-block__newsletter {
    text-align: left;
}
 .footer .footer__blocks-wrapper.grid.grid--1-col.grid--2-col.grid--4-col-tablet {
      display: flex !important;
      flex-wrap: wrap !important;
      column-gap: unset;
      row-gap: unset;
}
   .footer ul.footer-block__details-content.list-unstyled li a {
    display: inline-flex;
    position:relative;
}
.footer ul.footer-block__details-content.list-unstyled li a:before {
    content: "";
    position: absolute;
    height: 1px;
    background: #fff;
    bottom: 0;
    transition: 0.3s;
    left: 0%;
    right: 100%;
}
.footer ul.footer-block__details-content.list-unstyled li a:hover::before {
    left: 0%;
    right: 0%;
}
.footer .footer-block.grid__item.footer-block--menu {
    width: 16.666666666666668% !important;
    flex:0 0 16.666666666666668% !important;
