<office-fit-sec class="office-fit-sec office-fit-sec-seven">
    <div class="office-fit-sec-wrapper">
        <h2 class="title h2 text-center">{{ section.settings.heading }}</h2>
        <div class="content">
            <p>
                {{ section.settings.description }}
            </p>
            <br />
        </div>
        <div class="package-items">
           {% for block in section.blocks %}
             <div class="package-item">
               <a  href={{ block.settings.link  }}>
                <img
                    src={{ block.settings.image | img_url:'master'  }}
                    alt="office "
                    width=""
                    height=""
                    class="package-item-image lazy entered loaded"
                />
                <span class="package-item-name">{{ block.settings.packageheading  }}</span>
            </a>
             </div>

            {% endfor %}
        </div>
    </div>
</office-fit-sec>
{% schema %}
  {
    "name": "Total Package",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        } ,
           {
          "type": "text",
          "id": "description",
          "label": "Discription"
        } 
    ],
       "blocks": [
      {
        "type": "text",
        "name": "Package Block",   
        "settings":[
           
           {
        "id": "image",
        "type": "image_picker",
        "label": "Package Image"
        },
         {
            "type": "text",
            "id": "packageheading",
            "label": "Package Text"
          },
             {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
        ]
      }   
    ]
  }
{% endschema %}

